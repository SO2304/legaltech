# ============================================

# Base de données PostgreSQL (Render/Neon/Supabase)
DATABASE_URL="postgresql://user:password@host:5432/flashjuris"

# Application
NEXT_PUBLIC_APP_URL="https://your-app.onrender.com"
NODE_ENV="production"

# Email (Resend)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxx"

# Stripe
STRIPE_SECRET_KEY="sk_xxxxxxxxxxxxxxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxxxxxx"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_xxxxxxxxxxxxxxxxx"

# Sécurité
CRON_SECRET="your-random-secret-for-cron-jobs"
ENCRYPTION_KEY="your-32-character-encryption-key"

